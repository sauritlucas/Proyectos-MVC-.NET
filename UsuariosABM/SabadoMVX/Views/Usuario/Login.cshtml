@model SabadoMVX.Models.Usuario

@{
    ViewBag.Title = "Login";
}
    <div class="row">
        <div class="col-sm-12">
            <div>
                <h4> Ingreso al sistema</h4>

            </div>
        </div>
    </div>
            @using (Html.BeginForm())
            {
            <div class="row">
            <div class="col-lg-6">
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Nombre de usuario</label>
                        <div class="col-sm-6">
                            @Html.TextBoxFor(Model => Model.nombreUsuario, htmlAttributes: new { @class = "form-control", @id = "txtNombreDeUsuario" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label">Contraseña</label>
                        <div class="col-sm-6">
                            @Html.PasswordFor(Model => Model.password, htmlAttributes: new { @class = "form-control", @id = "txtPasword" })
                        </div>
                    </div>
                    <div class="form-group text-right">
                        <div class="col-xs-12">
                            <button class="btn btn-primary" type="submit">
                                Ingresar
                            </button>

                        </div>
                    </div>
                </div>

            </div>


        </div>

}