@model SegundoParcialSaurit.Models.Socio
@{
    ViewBag.Title = "AltaSocio";

    List<SelectListItem> itemsTipoDocumento = (List<SelectListItem>)ViewBag.itemsDocumento;
    List<SelectListItem> itemsDeportes = (List<SelectListItem>)ViewBag.itemsDeportes;

}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Alta de nuevo socio</h4>

        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(Model => Model.Nombre, htmlAttributes: new { @class = "form-control", @id = "txtNombre" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Apellido</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(Model => Model.Apellido, htmlAttributes: new { @class = "form-control", @id = "txtApellido" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Tipo Documento</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("IdTipoDocumento", itemsTipoDocumento, "Seleccione Tipo Documento", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Documento</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(Model => Model.NroDocumento, htmlAttributes: new { @class = "form-control", @id = "txtTelefono" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Deporte</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("IdDeporte", itemsDeportes, "Seleccione Deporte", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>
            </div>

            <div class="form-group text-right">
                <div class="col-xs-12">
                    <button class="btn btn-primary" type="submit">
                        Asociar
                    </button>

                </div>
            </div>
        </div>
    </div>






}





